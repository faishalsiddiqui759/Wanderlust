<% layout("/layouts/boilerplate")%>
<div class=" mt-4 ">
    <div class=" offset-3 mb-3 mt-5" ><h3>Login on Wanderlust</h3></div>
    <div class="col-6 offset-3 mt-3">
        <form method="post" action="/login" class="needs-validation" novalidate>
           <div class="mb-3">
            <label for="usern" class="form-label mb-1">Username</label>
            <input type="text" id="usern" name="username" class="form-control" required>
            <div class="invalid-feedback">Username</div>
           </div>
           <div class="mb-3">
            <label for="passw" class="form-label mb-1">Password</label>
            <input type="password" id="passw" name="password" class="form-control" required>
            <div class="invalid-feedback">Password</div>
           </div>
           <button class="btn btn-success">Login</button>
        </form>
      </div>
</div>