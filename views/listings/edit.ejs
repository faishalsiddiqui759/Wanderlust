<% layout("/layouts/boilerplate") -%>
<body>

    <form method="post" action="/listing/<%=listing._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
    <div class="row form-body ">
        <div class="col-10">
            <br>
            <h2><b>Edit your List</b></h2>
         <div>
             <lable for="title" class="form-lable">Title</lable>
             <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control mb-3" required>
             <div class="valid-feedback mb-3">Looks great!</div>
            <div class="invalid-feedback mb-3">Please enter title</div>
         </div>
         <div>
             <lable for="Description" class="form-lable">Description</lable>
            <textarea name="listing[description]" class="form-control mb-3" required><%= listing.description %></textarea>
            <div class="valid-feedback mb-3">Looks great!</div>
            <div class="invalid-feedback mb-3">Please enter description</div>
         </div>

             <div class="form-lable previewImage">
                <lable for="originalImage">Original image</lable>
                <image class="form-control" src="<%=originalImageUrl%>" id="originalImage"></image>
             </div><br>

         <div>
             <lable for="image" class="form-lable">Upload new image</lable>
             <input type="file" name="listing[image]" class="form-control mb-3" value="<%= listing.image %>">   
         </div>
          
         <div class="mb-3">
            <lable for="dropdown" class="form-lable">Select Category</lable>
            <select class="form-select" id="dropdown" name="listing[category]" required>
                <option value="Mountains">Mountains</option>
                <option value="Pools">Pools</option>
                <option value="Beach">Beach</option>
                <option value="House Boats">Boats</option>
            </select>
        </div>


         <div class="row">
             <div class="col-md-4">
             <lable for="price" class="form-lable">Price</lable>
             <input  name="listing[price]" class="form-control mb-3" value="<%= listing.price %>" required>
             <div class="valid-feedback mb-3">Looks great!</div>
            <div class="invalid-feedback mb-3">Please enter price</div>
         </div>
         <div class="col-md-8">
             <lable for="country" class="form-lable">Country</lable>
             <input type="text" name="listing[country]"  class="form-control mb-3" value="<%= listing.country %>" required>
             <div class="valid-feedback mb-3">Looks great!</div>
            <div class="invalid-feedback mb-3">Please enter country</div>
         </div>
         </div>
 
         <div>
             <lable for="location" class="form-lable">Location</lable>
             <input type="text" name="listing[location]"  class="form-control mb-3" value="<%= listing.location %>" required>
             <div class="valid-feedback mb-3">Looks great!</div>
            <div class="invalid-feedback mb-3">Please enter location</div>
         </div>
 
         <button class="btn btn-dark form-btn ">Edit</button>
     </form> 
        </div> 
      </div> <br> 
 </body>
